{% extends 'base.html.twig' %}

{% block body %}
<div class="flex justify-between"></div>
<h1>Liste des montagnes russes</h1>
<a href="{{path('app_coaster_add')}}" class="btn btn-primary"><i class="bi bi-arrow-down-right-circle"></i>Ajouter une montagne russe</a>

<div class="divider"></div>

<form action ="" method="get" class="flex py-2">
    <select name="park" class="select">
        <option value="">Tous les parcs</option>
        {% for park in parks %}
        <option value="{{ park.id }}" {{ parkId == park.id ? 'selected':''}}>{{ park.name}}</option>
        {% endfor %}
    </select>

    <select name="category" class="select">
        <option value="">Toutes les cat√©gories</option>
        {% for category in categories %}
        <option value="{{ category.id }} " {{ categoryId == category.id ? 'selected':''}}>{{ category.name}}</option>
        {% endfor %}
    </select>

    <input type="search" name="search" class="input ms-2" placeholder="Rechercher" value="{{ search }}">

    <button type="submit" class="btn btn-default ms-2"><i class="bi bi-funnel"></i>Filtrer</button>
</form>

<div class="overflow-x-auto"> </div>
    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Categories</th>
                <th>Vitesse max</th>
                <th>Longueur (m)</th>
                <th>Hauteur max</th>
                <th>En fonctionnement</th>
                <th>Parc</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for entity in entities %}
            <tr>
                <td><strong>{{ entity.name }} </strong></td>
                <td> 
                    {% for category in entity.categories %}
                    <span class="badge"> {{category.name}}</span>
                    {% endfor %}
                </td>
                <td>{{ entity.maxSpeed }}</td>
                <td>{{ entity.length }}</td> 
                <td>{{ entity.maxHeight }}</td>
                <td>{{ entity.operating ? 'üíö‚Äã' : '‚ù§Ô∏è‚Äã' }}</td>
                <td>{{ entity.park.name }}</td>
                <td> 
                    <a href="{{ path('app_coaster_edit', {'id': entity.id}) }}" class="btn btn-accent btn-sm"><i class="bi bi-pencil-square"></i></a>
                     <a href="{{ path('app_coaster_remove', {'id': entity.id}) }}" class="btn btn-primary btn-sm"><i class="bi bi-trash"></i></a>
                </td>

            </tr>
            {% endfor %}
        </tbody>
       
    </table>
</div>

<div class="flex justify-between">
    {% include "utils/_pagination.html.twig" with {'route' : 'app_coaster_index'} %}
    <div>{{ entities.count }} coaster(s)</div>
</div>



{% endblock %} 
